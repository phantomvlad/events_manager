<h2 class="text-center"><%= t(".sign_up") %></h2>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="row justify-content-center">
    <div class="col-md-4">
      <div class="mb-3">
        <div class="field mb-3">
          <%= f.label :email, class: "form-label" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
          <div id="emailHelp" class="form-text">Введите незарегистрированный email</div>
        </div>

        <div class="field mb-3">
          <%= f.label :name, class: "form-label" %>
          <%= f.text_field :name, autofocus: true, input_html: {autocomplete: 'disabled'}, class: "form-control" %>
          <span id="passwordHelpInline" class="form-text">
             Максимум 35 символов
          </span>
        </div>

        <div class="field mb-3">
          <%= f.label :password, class: "form-label" %>
          <%= f.password_field :password, autocomplete: "new-password", autofocus: true, class: "form-control" %>
          <span id="passwordHelpInline" class="form-text">
             Минимум 6 символов
          </span>
        </div>

        <div class="field mb-3">
          <%= f.label :password_confirmation, class: "form-label" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", autofocus: true, class: "form-control" %>
        </div>

        <div class="actions text-center">
          <%= f.submit "Зарегистрироваться", class: "btn btn-primary", data: {turbo: false}%>
        </div>
      </div>
    </div>
  </div>
<% end %>

<div class="text-center">
  <%= render "devise/shared/links" %>
</div>
